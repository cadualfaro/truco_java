<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".show"
    android:background="@drawable/backgroundsn"
    android:id="@+id/relative"
    >

    <TextView
        android:id="@+id/viewVira"
        android:layout_width="90dp"
        android:layout_height="55dp"
        android:padding="0dp"
        android:fontFamily="sans-serif-thin"
        android:textAlignment="center"
        android:layout_toEndOf="@id/viraP1"
        android:layout_marginTop="180dp"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textColor="@color/white"
        />

    <TextView
        android:id="@+id/p1Name"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginStart="10dp"
        android:text="NÃ³s"
        android:fontFamily="sans-serif-thin"
        android:maxLength="6"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="45sp"
        android:textColor="@color/white"
        />

    <TextView
        android:id="@+id/p2Name"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/p1Name"
        android:layout_marginTop="100dp"
        android:text="Eles"
        android:fontFamily="sans-serif-thin"
        android:maxLength="6"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="45sp"
        android:textColor="@color/white"
        />

    <TextView
        android:id="@+id/viraP1"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:background="@drawable/vira"
        android:text="Vira"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:visibility="invisible" />

    <ImageButton
        android:id="@+id/addBtn1"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="250dp"
        android:background="@drawable/spades"
        android:src="@drawable/ic_add" />

    <TextView
        android:id="@+id/pontosP1"
        android:layout_width="wrap_content"
        android:layout_height="110dp"
        android:layout_below="@id/addBtn1"
        android:layout_marginStart="20dp"
        android:text="0"
        android:fontFamily="sans-serif-thin"
        android:textColor="@color/white"
        android:textSize="100sp" />

    <ImageButton
        android:id="@+id/minusBtn1"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@id/addBtn1"
        android:layout_marginTop="145dp"
        android:background="@drawable/spades"
        android:src="@drawable/ic_minus" />


    <TextView
        android:id="@+id/viraP2"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:layout_marginStart="220dp"
        android:background="@drawable/vira"
        android:text="Vira"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:visibility="invisible"
        />


    <ImageButton
        android:id="@+id/addBtn2"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="250dp"
        android:layout_toEndOf="@id/addBtn1"
        android:background="@drawable/spades"
        android:src="@drawable/ic_add" />

    <TextView
        android:id="@+id/pontosP2"
        android:layout_width="wrap_content"
        android:layout_height="110dp"
        android:layout_below="@id/addBtn2"
        android:layout_marginStart="240dp"
        android:padding="0dp"
        android:text="0"
        android:fontFamily="sans-serif-thin"
        android:textColor="@color/white"
        android:textSize="100sp" />

    <ImageButton
        android:id="@+id/minusBtn2"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@id/addBtn2"
        android:layout_marginStart="120dp"
        android:layout_marginTop="145dp"
        android:layout_toEndOf="@id/minusBtn1"
        android:background="@drawable/spades"
        android:src="@drawable/ic_minus" />



</RelativeLayout>